# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

POST    /iapi/events                controllers.EventsController.postEvent()
GET     /iapi/events/:event         controllers.EventsController.getEvent(event: Int)
PATCH   /iapi/events/:event         controllers.EventsController.todo(event: Int)
PUT     /iapi/events/:event/name    controllers.EventsController.todo(event: Int)
# ...
DELETE  /iapi/events/:event         controllers.EventsController.todo(event: Int)
POST    /iapi/events/:event/RSVPs   controllers.EventsController.todo(event: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
