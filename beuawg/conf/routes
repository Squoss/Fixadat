# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

POST    /iapi/events                controllers.Default.todo
GET     /iapi/events/:event         controllers.EventsController.prettyToDo(event: String)
PATCH   /iapi/events/:event         controllers.EventsController.todo(event: java.util.UUID)
PUT     /iapi/events/:event/name    controllers.EventsController.todo(event: java.util.UUID)
# ...
DELETE  /iapi/events/:event         controllers.EventsController.todo(event: java.util.UUID)
POST    /iapi/events/:event/RSVPs   controllers.EventsController.todo(event: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
